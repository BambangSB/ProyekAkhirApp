<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.proyekakhirmonitoringporang">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:usesCleartextTraffic="true"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ProyekAkhirMonitoringPorang">
        <activity android:name=".lahan.TambahLahan"></activity>
        <!-- android:theme="@style/Theme.ProyekAkhirMonitoringPorang" -->
        <activity android:name=".LahanActivity" />
        <activity
            android:name=".AnimatedSplashscreen"
            android:label="Aplikasi Monitoring Porang"
            android:theme="@style/Theme.Transparent">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:label="@string/title_activity_bottom_nav" />
        <activity android:name=".WellcomeScreen" />
        <activity android:name=".UbahProfil" />
        <activity android:name=".NotifikasiActivity" />
        <activity android:name=".LoginActivity" />
        <activity android:name=".SingupActivity" />
        <activity android:name=".DetailHasilCatat" />
        <activity android:name=".activityprofil.ProfilInfo" />
        <activity android:name=".activityprofil.WebPorasiteam" />
        <activity android:name=".activityprofil.AboutUs" />
        <activity android:name=".activityprofil.BibitPorang" />
    </application>

</manifest>