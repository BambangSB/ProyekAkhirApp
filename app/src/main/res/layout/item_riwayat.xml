<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="15dp"
    android:layout_marginHorizontal="25dp">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/img_riwayat"
            android:layout_marginHorizontal="15dp"
            android:layout_marginVertical="15dp"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/ic_baseline_android_24"/>

        <LinearLayout
            android:layout_marginVertical="15dp"
            android:layout_marginHorizontal="15dp"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_tanggalMonitoring"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="marquee"
                android:text="Tanggal monitoring"/>

            <LinearLayout
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_marginRight="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kelembaban:"/>

                <TextView
                    android:id="@+id/tv_kelembabanMonitoring"
                    android:textColor="@color/primary_dark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nilai Kelembapan"/>

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_marginRight="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="pH:"/>

                <TextView
                    android:id="@+id/ph_Monitoring"
                    android:textColor="@color/primary_dark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nilai pH"/>

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>




</androidx.cardview.widget.CardView>